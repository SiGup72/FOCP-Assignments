    p1[0]=&s;
    p1[0]->displaydetails();
    cout<<endl;
    p1[1]=&p;
    p1[1]->displaydetails();
    cout<<endl;
    for(int i=0;i<2;i++)
    {test(p1[i]);
    delete p1[i];}
    
